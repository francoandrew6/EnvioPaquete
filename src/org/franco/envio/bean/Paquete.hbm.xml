<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.franco.envio.bean.Paquete" table="paquete">
	    
	    <id name="idPaquete" type="java.lang.Integer">
            <column name="idpaquete" />
            <generator class="sequence-identity" >
            	<param name="sequence">PAQUETE_SEQ</param>
            </generator>
        </id>
        
        <property name="nombre" type="java.lang.String">
            <column name="nombre" />
        </property>
        
        <property name="peso" type="java.lang.Integer">
            <column name="peso" />
        </property>
        
        <property name="descripcion" type="java.lang.String">
            <column name="descripcion" />
        </property>
        
        <property name="valor" type="java.lang.Double">
            <column name="valor" />
        </property>
        
        <property name="tipoPaquete" type="java.lang.String">
            <column name="tipopaquete" />
        </property>
        
        
	</class>
</hibernate-mapping>